<div class="well">

	<span class="pull-right">	
		<a class="btn" href="/job/restart/<%=@job.id%>"><i class="icon-repeat icon-white"></i></a>
		<a class="btn" href="/results/<%=@job.name%>"><i class="icon-list-alt icon-white"></i></a>
		<% if can_edit? %>
			<% if in_editing_mode? %>
				<button id="edit-button" class="btn active" data-toggle="button" onclick="toggle_edit();"><i class="icon-edit icon-white"></i></button>
			<% else %>
				<button id="edit-button" class="btn" data-toggle="button" onclick="toggle_edit();"><i class="icon-edit icon-white"></i></button>
			<% end %>
			<form id="toggle-editing" action="/job/<%=@job.id%>">
				<input id="edit" type="hidden" name="edit" value="off" />
			</form>
		<% end %>
	</span>

	<h3><%=project_name_from_job_name(@job.name)%></h3>

	<h4><%=device_name_from_job_name(@job.name)%> 
		<%if not @job.machine_id.nil?%>		
			<small>connected to</small> 
			<a href="/machines/<%=@job.machine_id%>"><%=@machine.call_sign%></a>
		<%end%>
	</h4>

	<%if @job.status.eql?("FAILED")%>
		<div class="alert alert-error">
			<strong>FAILED</strong>
			<span>&nbsp;</span>
			Last run on <%=@job.TIMESTAMP.strftime('%A, %d-%m-%Y at %H:%M:%S')%>.
		</div>
	<%elsif @job.status.eql?("NOT STARTED")%>
		<div class="alert alert-warning">
			<strong>PENDING</strong>
			<span>&nbsp;</span>
			Last run on <%=@job.TIMESTAMP.strftime('%A, %d-%m-%Y at %H:%M:%S')%>.
		</div>
	<%elsif @job.status.eql?("IN PROGRESS")%>
		<div class="alert alert-info">
			<strong>RUNNING</strong>
			<span>&nbsp;</span>
			Last run on <%=@job.TIMESTAMP.strftime('%A, %d-%m-%Y at %H:%M:%S')%>.
		</div>
	<%elsif @job.status.eql?("COMPLETED")%>
		<div class="alert alert-success">
			<strong>COMPLETED</strong>
			<span>&nbsp;</span>
			Last run on <%=@job.TIMESTAMP.strftime('%A, %d-%m-%Y at %H:%M:%S')%>.
		</div>
	<%elsif @job.status.eql?("SCHEDULED")%>
		<div class="alert alert-warning">
			<strong>PENDING</strong>
			<span>&nbsp;</span>
			Last run on <%=@job.TIMESTAMP.strftime('%A, %d-%m-%Y at %H:%M:%S')%>.
		</div>
	<%end%>

	<% if in_editing_mode? %>
		<%= erb :_job_detail_editing %>
	<% else %>
		<%= erb :_job_detail_readonly %>
	<% end %>

			<script>
				function toggle_edit() {
					
					var current_value = $('input#edit').val();
					
					if (current_value == 'off') {
						$('input#edit').val('on');
					}
					else {
						$('input#edit').val('off');
					}

					$('#toggle-editing').submit();
				}	
			</script>
		</div>
